<div class="container-fluid px-0">
    <header>
        <h1 class="heading text-center mb-0">Taco Stand</h1>
        <hr>
    </header>

    <section>
        <div class="row">
            <div class="col-12 col-sm-6 py-5 grid-secondary grid-1">
                <h2 class="text-center">Hola, tacos!</h2>
                <div class="text row">
                    {{#each tacos}}
                    {{#unless devoured}}
                    <p class="col-8 col-sm-6 col-md-8 pt-1">
                        <img class="taco-icons pr-2 img-fluid" src="./assets/img/taco.png">
                        {{taco_name}}
                    </p>
                    <div class="col-4 col-sm-6 col-md-4">
                        <button class="change-eat btn ml-3 my-1" data-id="{{id}}" data-neweat="true">
                            Devour
                        </button>
                    </div>
                    {{/unless}}
                    {{/each}}
                </div>
            </div>

            <div class="col-12 col-sm-6 py-5 grid-primary grid-2">
                <h2 class="text-center">Adi√≥s, tacos!</h2>
                <div class="text row">
                    {{#each tacos}}
                    {{#if devoured}}
                    <p class="col-8 col-sm-6 col-md-8 pt-1">
                        <img class="taco-icons pr-2 img-fluid" src="./assets/img/taco.png">
                        {{taco_name}}
                    </p>
                    <div class="col-4 col-sm-6 col-md-4">
                        <button class="change-eat btn ml-3 my-1" data-id="{{id}}" data-neweat="false">
                            Remake
                        </button>
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-sm-6 py-5 grid-primary grid-3">
                <h2 class="text-center">Custom request</h2>
                <form class="text create-form">
                    <div class="form-group">
                        <p>
                            <label for="taco">What kind of taco would you like?</label><br>
                        </p>
                        <div class="row px-3">
                            <input class="col-12 col-md-9" type="text" id="taco" name="name">
                            <div class="mx-auto">
                                <button class="btn mt-3 mt-md-0" type="submit">Add</button>
                            </div>
                        </div>
                    </div>
                </form>
                <img class="image d-none d-sm-block d-xl-none" src="./assets/img/tacos_cut.png">
            </div>

            <div class="col-12 col-sm-6 grid-secondary grid-4 pt-5 pb-sm-5 pb-0">
                <h2 class="text-center">Full menu</h2>
                <div class="text row">
                    <div class="col-9 col-sm-8 col-lg-9 col-xl-10 my-auto">
                        {{#each tacos}}
                        <p><i class="bullet fa fa-angle-double-right pr-2"></i>
                            {{taco_name}}
                        </p>
                        {{/each}}
                    </div>
                    <div class="col-3 col-sm-4 col-lg-3 col-xl-2 my-auto">
                        <img class="img-fluid sauce-pic" src="assets/img/taco_sauce.png">
                    </div>
                </div>
            </div>
        </div>
        <img class="taco2 img-fluid d-sm-none d-xl-block" src="./assets/img/tacos_cut.png">
    </section>

</div>
