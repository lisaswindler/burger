<h1>Taco Stand</h1>

<h2>Menu:</h2>
<ul>
    {{#each tacos}}
    {{#unless devoured}}
    <li>
        {{taco_name}}
        <button class="change-eat" data-id="{{id}}" data-neweat="true">
            Devour it!
        </button>
        {{!-- <button class="delete-taco" data-id="{{this.id}}">Delete</button> --}}
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Adi√≥s, tacos!</h2>

<ul>
    {{#each tacos}}
    {{#if devoured}}
    <li>
        {{taco_name}}
        <button class="change-eat" data-id="{{id}}" data-neweat="false">
            Add to menu
        </button>
